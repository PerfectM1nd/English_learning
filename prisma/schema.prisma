// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Word {
  id Int @id @default(autoincrement())
  word String @unique
  sentences Sentence[]
}

model Sentence {
  id Int @id @default(autoincrement())
  sentence String
  word Word @relation(fields: [wordId], references: [id])
  wordId Int
}